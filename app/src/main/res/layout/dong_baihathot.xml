<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/imageBaihatHot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY" />
    <TextView
        android:text="Phia Sau Mot Co Gai"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/tvTenBaiHatHot"
        android:layout_toRightOf="@+id/imageBaihatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvTenBaiHatHot"
        android:text="Soobin Hoang Son"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/tvTenCasiHot"
        android:layout_toRightOf="@+id/imageBaihatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageLuotthich"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>