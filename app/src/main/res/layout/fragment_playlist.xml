<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PlaylistFragment"
    android:gravity="center">

    <TextView
        android:paddingVertical="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:textStyle="bold"
        android:background="@drawable/custom_bg_title_playlist"
        android:id="@+id/tvTitlePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TOP 100"
        android:textColor="#CFF8D0"
        android:textSize="30sp" />
    <ListView
        android:paddingHorizontal="5dp"
        android:id="@+id/listviewPlaylist"
        android:layout_below="@+id/tvTitlePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#2A014E"
        android:layout_marginHorizontal="5dp"
        android:text="xem thÃªm.."
        android:textSize="18sp"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/iconmoreplaylist2"
        android:paddingLeft="10dp"
        android:layout_below="@id/listviewPlaylist"
        android:id="@+id/tvViewMorePlaylist"
        android:background="@drawable/custom_bg_view_playlist"
        android:layout_marginTop="2dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>