<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageBackgoundPlaylist"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="5dp"
        android:scaleType="fitXY" />
<!--    <View-->
<!--        android:background="@drawable/custom_bg_quangcao"-->
<!--        android:layout_marginHorizontal="5dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"/>-->
    <ImageView
        android:id="@+id/imagePlaylist"
        android:layout_alignBottom="@id/imageBackgoundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tvTenPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagePlaylist"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/imagePlaylist"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="top 100 nhac tre"
        android:textColor="#DDFFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>