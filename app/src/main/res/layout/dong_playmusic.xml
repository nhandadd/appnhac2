<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#68BA07DA"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="1"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="10dp"
            android:id="@+id/tvIndexPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Em gai mua"
            android:layout_toRightOf="@id/tvIndexPlay"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="17sp"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:id="@+id/tvTenPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:text="Huong Tram"
            android:layout_below="@id/tvTenPlay"
            android:layout_toRightOf="@id/tvIndexPlay"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:id="@+id/tvCasiPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>